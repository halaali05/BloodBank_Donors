rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // only Admin SDK (Cloud Functions)
    }

    match /pending_profiles/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // only Admin SDK
    }

    match /requests/{requestId} {
      allow read: if isAuthenticated(); // أو false إذا بدك كل شي عبر functions
      allow write: if false;
    }

    match /notifications/{userId}/user_notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false;
    }

    // default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
